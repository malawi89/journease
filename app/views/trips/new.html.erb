<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h3>What is your next trip?</h3>

      <% if @trip.errors.any? %>
        <ul>
          <% @trip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= render 'form', trip: @trip %>

    </div>
  </div>
</div>

