<div class="minheight">
  <div class="container" align="center">
    <h1>Profile</h1><%= link_to "Edit", edit_user_registration_path  %>
    <ul style="list-style: none;">
      <li class="spaceli"><%= cl_image_tag @user.photo, height: 300, width: 400, crop: :fill %></li>
      <li class="spaceli">Username: <%= @user.username  %></li>
      <li class="spaceli">First name: <%= @user.first_name  %></li>
      <li class="spaceli">Last name: <%= @user.last_name  %></li>
      <li class="spaceli">Email address: <%= @user.email %></li>
    </ul>
  </div>
</div>
