<%= simple_form_for [@trip, @activity] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sub_category, collection: ['sight seeing', 'event', 'physical activity', 'dining', 'other (hmmm naughty, naughty)'] %>
  </div>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :booking_references %>
    <%= f.input :comments %>
    <%= f.input :contact_details %>
    <%= f.input :booking_documents %>
    <%= f.input :photo %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class:"btn btn-success" %>
  </div>
<% end %>

