<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h3>What activity would you add to your trip?</h3>

      <% if @activity.errors.any? %>
        <ul>
          <% @activity.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= render 'form', activity: @activity %>
    </div>
  </div>
</div>

