<% content_for :meta_title, "Add an Activity" %>
<div class="minheight">
  <div class="container">
    <div class="row">
      <div class="form-stuff">
         <h3 class = "text-center">Add an activity to your trip</h3>

        <% if @activity.errors.any? %>
          <ul>
            <% @activity.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

        <%= render 'form', activity: @activity %>
      </div>
    </div>
  </div>
</div>
