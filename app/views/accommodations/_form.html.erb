<%= simple_form_for [@trip, @accommodation] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sub_category, collection: ['hotel', 'airbnb', 'crashing at friends / family', 'others (camping, random hookup, etc.)'] %>
  </div>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :location %>
    <%= f.input :checkin %>
    <%= f.input :checkout %>
    <%= f.input :booking_references %>
    <%= f.input :comments %>
    <%= f.input :contact_details %>
    <%= f.input :booking_documents %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, class:"btn btn-success" %>
  </div>
<% end %>

